# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control

# Database server address
DB_SERVER=your-server.database.windows.net

# Database name
DB_DATABASE=your_database_name

# Authentication method (True for Windows Auth, False for SQL Auth)
DB_USE_WINDOWS_AUTH=False

# SQL Server credentials (required if DB_USE_WINDOWS_AUTH=False)
DB_USERNAME=your_username
DB_PASSWORD=your_password

# ============================================================================
# ORS (OpenRouteService) API CONFIGURATION
# ============================================================================
# OpenRouteService endpoint for distance matrix calculations
# Uses road network distances instead of straight-line (Haversine) distances

# ORS Matrix API endpoint (default: local ORS instance)
ORS_MATRIX_ENDPOINT=http://localhost:8080/ors/v2/matrix/driving-car

# ORS API Key (optional - only needed for authenticated/public ORS services)
# Leave empty if using local ORS instance without authentication
ORS_API_KEY=

# Enable/disable ORS API (set to False to use Haversine distance)
ORS_ENABLED=True

# Request timeout in seconds
ORS_TIMEOUT=30

# ============================================================================
# EXAMPLE CONFIGURATIONS
# ============================================================================

# Example 1: SQL Server with SQL Authentication
# DB_SERVER=myserver.database.windows.net
# DB_DATABASE=RouteOptimization
# DB_USE_WINDOWS_AUTH=False
# DB_USERNAME=admin_user
# DB_PASSWORD=SecurePassword123!

# Example 2: Local SQL Server with Windows Authentication
# DB_SERVER=localhost
# DB_DATABASE=RouteOptimization
# DB_USE_WINDOWS_AUTH=True
# DB_USERNAME=
# DB_PASSWORD=

# Example 3: Azure SQL Database
# DB_SERVER=myazureserver.database.windows.net
# DB_DATABASE=RouteOptimizationDB
# DB_USE_WINDOWS_AUTH=False
# DB_USERNAME=sqladmin
# DB_PASSWORD=ComplexPassword123!

# ============================================================================
# SETUP INSTRUCTIONS
# ============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Edit .env with your actual credentials
# 3. Verify connection: python -c "from src.database import DatabaseConnection; db = DatabaseConnection(); db.connect()"
# 4. Run the pipeline: python run_pipeline.py
